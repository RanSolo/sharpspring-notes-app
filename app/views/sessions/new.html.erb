<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <div class='form-group'>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email], class: 'form-control w-50' %>
  </div>
  <div class='form-group'>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, '', class: 'form-control w-50' %>
  </div><br />
  <p><%= submit_tag 'Log in', class:'btn btn-primary' %></p>
<% end %>